                </xs:simpleType>
            </xs:element>
        </xs:sequence>
        <xs:attribute name="Rszam" type="xs:string" use="required"/>
        <xs:attribute name="VevoId" type="xs:string" use="required"/>
        <xs:attribute name="TermekId" type="xs:string" use="required"/>
    
    </xs:complexType>
    

</xs:schema>
